{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "jsxImportSource": "hono/jsx",
    "sourceMap": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "paths": {
      "@laratype/*": ["packages/*/src"],
      "sauf": ["packages/sauf/src"],
      "laratype": ["packages/laratype/src"]
    },
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop":  true,
    "isolatedModules": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,

    // TypeORM
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules", "<node_internals>/**", "./dist/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "swc": true
  }
}